<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".ReserveTable">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите столик"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center_vertical|center_horizontal" />

    <GridLayout
        android:id="@+id/tableGridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="true">

        <!-- Пример для столика 1 -->
        <LinearLayout
            android:id="@+id/table1Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_columnWeight="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewTable1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Столик 1"
                android:gravity="center" />

            <!-- Дополнительные элементы, связанные со столиком 1 -->
        </LinearLayout>

        <!-- Пример для столика 2 -->
        <LinearLayout
            android:id="@+id/table2Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewTable2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Столик 2"
                android:gravity="center" />

            <!-- Дополнительные элементы, связанные со столиком 2 -->
        </LinearLayout>

        <!-- Пример для столика 3 -->
        <LinearLayout
            android:id="@+id/table3Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewTable3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Столик 3"
                android:gravity="center" />

            <!-- Дополнительные элементы, связанные со столиком 3 -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/table4Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_columnWeight="1"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewTable4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Столик 4"
                android:gravity="center" />

            <!-- Дополнительные элементы, связанные со столиком 4 -->
        </LinearLayout>
    </GridLayout>

    <Button
        android:id="@+id/selectTableButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выбрать столик" />

</LinearLayout>
